{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<div class="example-wrapper">
        <h1>Winkelwagen</h1>
    {% for product in Products %}
            <table>
                <tr>
                    <td>Naam</td>
                    <td>Aantal</td>
                    <td>Prijs</td>
                </tr>
                <tr>
                    <td>
                        {{ product.Product.Name }}
                    </td>
                    <td>
                        {{ product.Aantal }}
                    </td>
                    <td>
                        {{ product.Product.Prijs }}
                    </td>
                </tr>
            </table>
    {% endfor %}
</div>
{% endblock %}
